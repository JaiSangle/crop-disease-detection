# Flask configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=generate_a_secure_random_key_here
DEBUG=False

# Database configuration
DATABASE_URL=sqlite:///database/crop_disease.db

# Model path
MODEL_PATH=../models/best_model.keras

# File upload settings
MAX_CONTENT_LENGTH=16777216  # 16MB max file upload
UPLOAD_FOLDER=static/uploads
PROCESSED_FOLDER=static/processed
CONTRIBUTIONS_FOLDER=static/contributions
ALLOWED_EXTENSIONS=png,jpg,jpeg

# Optional external services
# OPENWEATHERMAP_API_KEY=your_api_key_here  # For weather data
# GOOGLE_MAPS_API_KEY=your_api_key_here     # For better geolocation

# TensorFlow settings
TF_CPP_MIN_LOG_LEVEL=2  # Suppress TensorFlow logging (0=all, 1=INFO, 2=WARNING, 3=ERROR) 